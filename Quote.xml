<?xml version="1.0"?><!DOCTYPE pdf PUBLIC "-//big.faceless.org//report" "report-1.1.dtd">
<pdf>
<head>
	<link name="NotoSans" type="font" subtype="truetype" src="${nsfont.NotoSans_Regular}" src-bold="${nsfont.NotoSans_Bold}" src-italic="${nsfont.NotoSans_Italic}" src-bolditalic="${nsfont.NotoSans_BoldItalic}" bytes="2" />
	<#if .locale == "zh_CN">
		<link name="NotoSansCJKsc" type="font" subtype="opentype" src="${nsfont.NotoSansCJKsc_Regular}" src-bold="${nsfont.NotoSansCJKsc_Bold}" bytes="2" />
	<#elseif .locale == "zh_TW">
		<link name="NotoSansCJKtc" type="font" subtype="opentype" src="${nsfont.NotoSansCJKtc_Regular}" src-bold="${nsfont.NotoSansCJKtc_Bold}" bytes="2" />
	<#elseif .locale == "ja_JP">
		<link name="NotoSansCJKjp" type="font" subtype="opentype" src="${nsfont.NotoSansCJKjp_Regular}" src-bold="${nsfont.NotoSansCJKjp_Bold}" bytes="2" />
	<#elseif .locale == "ko_KR">
		<link name="NotoSansCJKkr" type="font" subtype="opentype" src="${nsfont.NotoSansCJKkr_Regular}" src-bold="${nsfont.NotoSansCJKkr_Bold}" bytes="2" />
	<#elseif .locale == "th_TH">
		<link name="NotoSansThai" type="font" subtype="opentype" src="${nsfont.NotoSansThai_Regular}" src-bold="${nsfont.NotoSansThai_Bold}" bytes="2" />
	</#if>
    <macrolist>
        <macro id="nlheader">
          <table width="100%">
            <tr>
            <td align="left">
               <table class="header" style="width: 50%;">
              <tr>
	<td rowspan="3" style="padding: 0px; margin-top:-10px;"><img src="${'https://5898295.app.netsuite.com/core/media/media.nl?id=3897&amp;c=5898295&amp;h=d84c9437d065122041a5'}" style="width:236.8px;height:52px;"/></td> 
	</tr>
	</table>
              </td>

            <td align="right">
              <table>
                <tr><td style=" font-size: 28pt;margin-right:0px;">Quote</td></tr>
              </table>
              </td>
            </tr>
          </table>
          <table margin-top="10px" width="100%" top="-10px">
            <tr>
            <td align="left">
                <table>
             <tr>
              <td style="padding: 0px;">${companyInformation.companyName}<br />${companyInformation.addressText}<br />${companyInformation.phone}</td>
              </tr>
          </table>
              </td>
              <td align="right">
              <table>
                <tr line-height="75%">
                <td align="left">Quote #</td><td align="right">${record.tranid}</td>
                </tr>
                <tr line-height="75%">
                <td align="left">Date Created</td><td align="right">${record.trandate}</td>
                </tr>
                <tr line-height="75%">
                <td align="left">Account #</td><td align="right">${record.entity.entityid}</td>
                </tr>
                </table>
              </td>
            </tr>
          </table>
        </macro>
        <macro id="nlfooter">

            <table class="footer" style="width: 100%;margin-top:10px"><tr>
	<td></td>
	<td align="right"><pagenumber/> of <totalpages/></td>
	</tr></table>
        </macro>
    </macrolist>

    <style type="text/css">* {
		<#if .locale == "zh_CN">
			font-family: NotoSans, NotoSansCJKsc, sans-serif;
		<#elseif .locale == "zh_TW">
			font-family: NotoSans, NotoSansCJKtc, sans-serif;
		<#elseif .locale == "ja_JP">
			font-family: NotoSans, NotoSansCJKjp, sans-serif;
		<#elseif .locale == "ko_KR">
			font-family: NotoSans, NotoSansCJKkr, sans-serif;
		<#elseif .locale == "th_TH">
			font-family: NotoSans, NotoSansThai, sans-serif;
		<#else>
			font-family: Helvetica, sans-serif;
		</#if>
		}
		table {
			font-size: 9pt;
			table-layout: fixed;
		}
      body{
        line-height : 12pt;
      }
        #headers {
            font-weight: bold;
            font-size: 9pt;
            vertical-align: middle;
            padding: 4px 5px 2px;
            background-color: #e3e3e3;
            color: #333333;
        }
      #headers1 {
            font-weight: bold;
            font-size: 9pt;
            vertical-align: middle;
            padding: 4px 2px 2px;
            background-color: #e3e3e3;
            color: #333333;
        }
        td {
            padding: 2px 3px;
        }
		td p { align:left }
        b {
            font-weight: bold;
            color: #333333;
        }
        table.header td {
            padding: 0px;
            font-size: 10pt;
        }
        table.footer td {
            padding: 0px;
            font-size: 8pt;
        }
        table.itemtable th {
            padding-bottom: 10px;
            padding-top: 10px;
        }
        table.body td {
            padding-top: 1px;
        }
        table.total {
            page-break-inside: avoid;
        }
        tr.totalrow {
            background-color: #e3e3e3;
            line-height: 100%;
        }
        td.totalboxtop {
            font-size: 12pt;
            background-color: #e3e3e3;
        }
        td.addressheader {
            font-size: 8pt;
            padding-top: 6px;
            padding-bottom: 2px;
        }
        td.address {
            padding-top: 0px;
        }
        td.totalboxmid {
            font-size: 28pt;
            padding-top: 20px;
            background-color: #e3e3e3;
        }
        td.totalboxbot {
            background-color: #e3e3e3;
            font-weight: bold;
        }
        span.title {
            font-size: 28pt;
        }
        span.number {
            font-size: 16pt;
        }
        span.itemname {
            font-weight: bold;
            line-height: 150%;
        }
        hr {
            width: 100%;
            color: #d3d3d3;
            background-color: #d3d3d3;
            height: 1px;
        }
      p.itemname1{
        margin-top:80px;
      }
      div.test{
        border-style: solid;
		border: 1px solid;
		border-color: gray;
		width: 4in;
 		height: 1in;
        margin-top:-5px;
        display:block;
        margin-top:-20px;
      }
</style>
</head>
  <body header="nlheader" header-height="16%" footer="nlfooter" footer-height="10%" padding="0.5in 0.5in 0.5in 0.5in" size="Letter">
  <table width="100%" top="-20px">
     <tr>
       <td align="right" colspan="10"><p style="width: 100%; margin-top: 10px;"><b>${record.billaddress@label}</b><br /><span style="width:50%;align:right;">${record.billaddress}</span></p></td>
       <td colspan="1">&nbsp;</td>
       <td align="left" colspan="9"><p style="width: 100%; padding: 0px; margin-top: 10px;align:left;"><b>${record.shipaddress@label}</b><br /><span width="50%">${record.shipaddress}</span></p></td>
     </tr>
  </table>

<table class="body" style="width: 100%; margin-top: 10px;"><tr id="headers">
	<th colspan="4" padding-left="3px">Distributor Sales Rep</th>
	<th colspan="2">${record.shipmethod@label}</th>
    <th colspan="2" style="padding: 3px;">${record.duedate@label}</th>
    <th colspan="2">Payment Terms</th>
	</tr>
	<tr>
	<td colspan="4">${record.custbody_vr_distsalesrep}</td>
	<td colspan="2">${record.shipmethod}</td>
    <td colspan="2" style="padding: 3px;">${record.duedate}</td>
    <td colspan="2">${record.terms}</td>
	</tr></table>
    
<#if record.item?has_content>

  <table class="body" style="width: 100%; margin-top: 10px;"><!-- start items --><#list record.item as item><#if item_index==0>
	<tr id="headers1">
	<th colspan="8" padding-left="3px">Item / Description</th>
    <th align="center" colspan="3">${item.quantity@label}</th>
	<th align="right" colspan="4">Price</th>
	<th align="right" colspan="4">Extended Price</th>
	</tr>
</#if><tr>
	<td colspan="8" font-size="9"><span class="itemname">${item.item}</span></td>
    <td align="center" colspan="3">${item.quantity}</td>
	<td align="right" colspan="4">${item.rate}</td>
	<td align="right" colspan="4">${item.amount}</td>
	</tr>
    <tr border-bottom="1px" border-color="#d3d3d3">
      <td colspan="14">${item.description}</td>
    </tr>
	</#list><!-- end items --></table>

</#if>
<table class="total" style="width: 100%; margin-top: 10px;"><tr>
	<td colspan="4">&nbsp;</td>
	<td align="right"><b>${record.subtotal@label}</b></td>
	<td align="right">${record.subtotal}</td>
	</tr>
	<tr>
	<td colspan="4">&nbsp;</td>
	<td align="right"><b>Est. Shipping</b></td>
      <#if record.shippingcost?length != 0>
	  <td align="right">${record.shippingcost}</td>
    <#else>
      <td align="right">$0.00</td>
    </#if>
	</tr>
  	<tr>
	<td colspan="4">&nbsp;</td>
	<td align="right"><b>Tax</b></td>
	<td align="right">${record.taxtotal}</td>
	</tr>
  	<tr class="totalrow">
	<td background-color="#ffffff" colspan="4">&nbsp;</td>
	<td align="right"><b>${record.total@label}</b></td>
	<td align="right">${record.total}</td>
	</tr></table>
  
</body>
</pdf>